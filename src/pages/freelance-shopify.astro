---
import PageLayout from "@/layouts/Base";

const meta = {
  title: "Consultant freelance Shopify – Développeur expert e-commerce",
  description: "Consultant freelance Shopify pour création, développement personnalisé, optimisation et maintenance de boutiques performantes.",
};
---

<PageLayout meta={meta}>

  {/* Hero */}
  <section class="text-center mt-8 font-sans max-w-4xl mx-auto px-4 flex flex-col gap-6">
    <i class="fab fa-shopify text-5xl text-accent mb-2"></i>
    <h1 class="text-4xl sm:text-5xl font-extrabold text-accent">
      Consultant freelance <br /> <span class="text-accent">Shopify</span>
    </h1>
    <p class="text-lg text-textColor max-w-2xl mx-auto">
      Boostez votre boutique en ligne avec un expert Shopify qui crée, optimise et personnalise votre e-commerce pour maximiser vos ventes.
    </p>
  </section>

  {/* Services Grid */}
  <section class="grid grid-cols-1 sm:grid-cols-2 gap-8 max-w-4xl mx-auto mt-16 px-4 font-sans">
    {[
      {
        category: "Création",
        title: "Boutiques Shopify sur mesure",
        text: "Développement et configuration de boutiques performantes, ergonomiques et alignées avec votre marque.",
        icon: "fas fa-store",
      },
      {
        category: "Personnalisation",
        title: "Fonctionnalités avancées",
        text: "Shopify Functions, UI Extensions, scripts et checkout personnalisé pour une expérience unique.",
        icon: "fas fa-cogs",
      },
      {
        category: "Intégrations",
        title: "Connecteurs sur mesure",
        text: "Synchronisation avec CRM, ERP, marketing, logistique pour automatiser et fiabiliser vos process.",
        icon: "fas fa-plug",
      },
      {
        category: "Support",
        title: "Maintenance & optimisation",
        text: "Amélioration des performances, suivi technique et évolutions pour garder votre boutique toujours à jour.",
        icon: "fas fa-tools",
      },
    ].map(({ category, title, text, icon }) => (
      <div
        class="group relative flex flex-col gap-4 p-6 rounded border border-zinc-700 hover:border-accent hover:shadow-lg transition duration-200"
        tabindex="0"
        role="group"
        aria-label={title}
      >
        <div class="flex items-center justify-between">
          <span class="text-xs uppercase tracking-wide text-zinc-500">{category}</span>
          <i class={`${icon} text-accent text-2xl`}></i>
        </div>

        <h3 class="text-xl font-bold text-zinc-100">{title}</h3>
        <p class="text-sm text-zinc-400">{text}</p>
      </div>
    ))}
  </section>

  {/* Call to Action */}
  <section class="mt-24 text-center max-w-xl mx-auto px-4 font-sans">
    <h2 class="text-3xl font-extrabold mb-6">Discutons de votre projet Shopify</h2>
    <p class="text-textColor text-lg mb-10">
      Vous souhaitez un accompagnement technique expert pour votre boutique ? Contactez-moi pour parler de vos besoins.
    </p>
    <a
      href="mailto:renaud.gouffe@gmail.com"
      class="inline-block bg-accent text-white font-semibold px-16 py-5 rounded text-xl transition hover:bg-accent-2 hover:scale-105"
      aria-label="Contacter Renaud Gouffé par email"
    >
      Me contacter
    </a>
  </section>

  {/* Font Awesome CDN */}
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
  />
</PageLayout>
