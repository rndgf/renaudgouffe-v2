---
import PageLayout from "@/layouts/Base.astro";
import Contact from "@/components/Contact.astro";

const meta = {
  title: "Consultant freelance Shopify – Développeur expert e-commerce",
  description:
    "Consultant freelance Shopify pour création, développement personnalisé, optimisation et maintenance de boutiques performantes.",
};
---

<PageLayout meta={meta}>
  {/* Hero */}
  <section
    class="text-center mt-8 font-sans max-w-4xl mx-auto px-4 flex flex-col gap-6"
  >
    <i class="fab fa-shopify text-7xl text-shopify mb-2"></i>
    <h1 class="text-4xl sm:text-5xl font-extrabold text-accent">
      Consultant Shopify <br />
      <span class="theme-accent">freelance</span>
    </h1>
    <p class="text-lg text-textColor max-w-2xl mx-auto">
      Boostez votre boutique en ligne avec un expert Shopify qui crée, optimise
      et personnalise votre e-commerce pour maximiser vos ventes.
    </p>
  </section>

  {/* Services Grid */}
  <section
    class="grid grid-cols-1 sm:grid-cols-2 gap-8 max-w-4xl mx-auto mt-16 px-4 font-sans"
  >
    {
      [
        {
          category: "Création",
          title: "Boutiques Shopify sur mesure",
          text: "Développement et configuration de boutiques performantes, ergonomiques et alignées avec votre marque.",
          icon: "fas fa-store",
        },
        {
          category: "Personnalisation",
          title: "Fonctionnalités avancées",
          text: "Shopify Functions, UI Extensions, scripts et checkout personnalisé pour une expérience unique.",
          icon: "fas fa-cogs",
        },
        {
          category: "Intégrations",
          title: "Connecteurs sur mesure",
          text: "Synchronisation avec CRM, ERP, marketing, logistique pour automatiser et fiabiliser vos process.",
          icon: "fas fa-plug",
        },
        {
          category: "Support",
          title: "Maintenance & optimisation",
          text: "Amélioration des performances, suivi technique et évolutions pour garder votre boutique toujours à jour.",
          icon: "fas fa-tools",
        },
      ].map(({ category, title, text, icon }) => (
        <div
          class="group relative flex flex-col gap-4 p-6 rounded border bg-darkBgLight/30 border-zinc-700"
          tabindex="0"
          role="group"
          aria-label={title}
        >
          <div class="flex items-center justify-between">
            <span class="font-mono text-xs uppercase tracking-wide text-accent">
              {category}
            </span>
            <i class={`${icon} text-zinc-400/50 text-2xl`} />
          </div>

          <h3 class="text-xl font-bold text-zinc-100">{title}</h3>
          <p class="text-sm text-zinc-400">{text}</p>
        </div>
      ))
    }
  </section>

  <Contact />
</PageLayout>
