---
import PageLayout from "@/layouts/Base";

const meta = {
  title: "Curriculum Vitae",
  description: "Retrouvez ici mon CV en ligne.",
};

const timelineItems = [
  {
    category: "Expériences professionnelles",
    events: [
      {
        date: "Depuis 2022",
        title: "Solution Architect / Lead Developer Shopify",
        company: "Colorz",
        url: "http://www.colorz.fr/",
        description: "Partenaire Shopify Plus, développement et architecture technique."
      },
      {
        date: "Depuis 2020",
        title: "Senior technical consultant / Senior Lead Developer",
        company: "Colorz",
        url: "http://www.colorz.fr/",
      },
      {
        date: "2015 → 2020",
        title: "Senior Lead Developer",
        company: "Colorz",
        url: "http://www.colorz.fr/",
      },
      {
        date: "2010 → 2014",
        title: "Lead Developer Magento",
        company: "Colorz",
        url: "http://www.colorz.fr/",
      },
      {
        date: "2005 → 2010",
        title: "Développeur web",
        company: "FTEL",
        url: "http://www.ftel.fr/",
      },
      {
        date: "2003 → 2005",
        title: "Contrat de professionnalisation (BTS)",
        company: "FTEL",
        url: "http://www.ftel.fr/",
      },
    ],
  },
  {
    category: "Expériences freelance",
    events: [
      {
        date: "Depuis 2021",
        title: "Freelance Shopify",
        url: "freelance-shopify",
        isLink: true,
      },
      {
        date: "Depuis 2009",
        title: "Freelance Magento",
      },
      {
        date: "Depuis 2005",
        title: "Freelance en développement web",
      },
    ],
  },
  {
    category: "Formation",
    events: [
      {
        date: "2003 → 2005",
        title: `BTS "Conception et développement multimédia" (alternance)`,
      },
      {
        date: "1998 → 2003",
        title: "Licence en Géographie",
      },
      {
        date: "1998",
        title: "Baccalauréat Littéraire",
      },
    ],
  },
];
---

<PageLayout meta={meta}>

  <section class="max-w-4xl mx-auto mt-10 px-4">

    <h1 class="title mb-8 text-center">Curriculum Vitae</h1>

    <section class="bg-accent/10 dark:bg-accent/20 border-l-4 border-accent p-6 rounded-md shadow-md mb-12 max-w-3xl mx-auto">
      <h2 class="font-bold text-2xl mb-4 text-accent">tldr;</h2>
      <ul class="list-disc list-inside space-y-2 text-slate-700 dark:text-slate-300 text-lg leading-relaxed">
        <li>Développeur PHP passionné depuis 2003, avec un intérêt constant pour le web et l’e-commerce depuis 1999.</li>
        <li>Lead Developer Magento chez <a href="http://www.colorz.fr" target="_blank" rel="nofollow" class="text-accent underline">Colorz</a> depuis 2010, expert confirmé de cette plateforme.</li>
        <li>Depuis 2019, chef de projet technique e-commerce, accompagnant des clients sur leurs enjeux fonctionnels et techniques.</li>
        <li>Depuis 2022, Solution Architect et Lead Developer Shopify chez Colorz, partenaire Shopify Plus.</li>
      </ul>
    </section>

    <div class="relative border-l-2 border-slate-300 dark:border-slate-600 pl-8">

      {timelineItems.map(({ category, events }) => (
        <>
          <h2 class="text-xl font-semibold text-slate-800 dark:text-slate-200 mb-6 mt-12">{category}</h2>
          <div class="space-y-8">
            {events.map(({ date, title, company, url, description, isLink }) => (
              <div class="relative">
                <span class="absolute -left-5 top-1.5 w-4 h-4 bg-accent rounded-full border-2 border-white dark:border-black"></span>
                <time class="block text-sm text-slate-500 dark:text-slate-400 mb-1">{date}</time>
                <h3 class="font-semibold text-slate-900 dark:text-slate-100">
                  {isLink ? (
                    <a href={url} class="text-accent hover:underline">{title}</a>
                  ) : (
                    title
                  )}
                </h3>
                {company && (
                  <p class="text-sm text-slate-600 dark:text-slate-400">
                    <a href={url} target="_blank" rel="nofollow" class="hover:underline">{company}</a>
                  </p>
                )}
                {description && (
                  <p class="mt-1 text-slate-700 dark:text-slate-300">{description}</p>
                )}
              </div>
            ))}
          </div>
        </>
      ))}

    </div>

  </section>

</PageLayout>
