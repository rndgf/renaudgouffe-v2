---
import PageLayout from "@/layouts/Base.astro";

const meta = {
  title: "Page introuvable | Consultant Shopify freelance",
  description:
    "La page que vous cherchez n'existe pas ou a été déplacée. Revenez à l'accueil pour continuer votre navigation.",
};
---

<PageLayout meta={meta}>
  <section
    class="mt-20 max-w-2xl mx-auto px-4 flex flex-col items-center gap-6 text-center font-sans"
  >
    <i class="fas fa-search-minus text-7xl theme-accent mb-6"></i>

    <h1 class="text-5xl font-extrabold theme-accent">404 – page introuvable</h1>

    <p class="text-lg text-textColor leading-relaxed max-w-md">
      La page que vous cherchez semble inexistante.<br />
      Revenez à l’accueil pour reprendre votre navigation.
    </p>

    <a
      href="/"
      aria-label="Retour à la page d'accueil"
      class="inline-block bg-accent/90 text-white font-semibold px-16 py-5 rounded text-xl transition hover:bg-rose-700/90 hover:scale-105"
    >
      Retour à l’accueil
    </a>
  </section>
</PageLayout>
